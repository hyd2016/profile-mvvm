<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize">

    <Button
        android:id="@+id/music_title_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:background="@drawable/bg_detail_back"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="@string/music_history"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:textColor="#000"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/music_title_btn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_toLeftOf="@+id/music_title_search"
        android:background="@android:drawable/ic_search_category_default"
        android:layout_marginTop="10dp"/>


    <EditText
        android:id="@+id/music_title_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/searchMusic"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="10dp"
        android:textSize="12sp"
        android:layout_marginRight="15dp" />

</RelativeLayout>