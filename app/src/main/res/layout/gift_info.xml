<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"

    android:orientation="horizontal"
    android:layout_marginStart="15dp">

    <TextView
        android:id="@+id/user_live_time2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_circle_deepgeen"
        android:gravity="center_horizontal"
        android:text="@string/Null"
        android:textColor="@android:color/background_light"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/user_live_time"
        app:layout_constraintTop_toBottomOf="@+id/user_tx_gift_num" />

    <TextView
        android:id="@+id/user_live_time3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_circle_deepgeen"
        android:gravity="center_horizontal"
        android:text="@string/Null"
        android:textColor="@android:color/background_light"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/user_live_time2"
        app:layout_constraintTop_toBottomOf="@+id/user_tx_gift_num" />

    <TextView
        android:id="@+id/user_tx_gift_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="@string/gift_rank"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_live_time"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_circle_deepgeen"
        android:gravity="center_horizontal"
        android:text="@string/Null"
        android:textColor="@android:color/background_light"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/user_tx_gift_num"
        app:layout_constraintTop_toBottomOf="@+id/user_tx_gift_num" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:contentDescription="@string/Null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_black_arrow" />

</androidx.constraintlayout.widget.ConstraintLayout>